<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/activity_event_nearby_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="https://schemas.android.com/tools"
        tools:context="com.example.nviller.projetm2psav.activities.MainActivity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_event_nearby_btResto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resto" />

        <Button
            android:id="@+id/activity_event_nearby_btHosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hosto" />

        <Button
            android:id="@+id/activity_event_nearby_btSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School" />

    </LinearLayout>

</FrameLayout>