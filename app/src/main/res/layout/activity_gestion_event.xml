<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgestionevent">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="Gérer les événements" />

    <Button
        android:id="@+id/activity_gestion_event_proximite"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/accent"
        android:text="Events à proximité"
        android:textSize="20sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Créer un event"
        android:id="@+id/activity_gestion_event_creer"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/activity_gestion_event_trouver_event"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/event_color_03"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Un event sur ton réseau social ?" />

    <Button
        android:id="@+id/activity_gestion_event_mes_events"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Mes events" />

    <Button
        android:id="@+id/activity_gestion_event_log_out"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="10sp"
        android:layout_marginTop="50dp"
        android:text="Se déconnecter" />


</LinearLayout>