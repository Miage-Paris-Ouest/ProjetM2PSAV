<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image1">
    <!-- android:background="@drawable/backgroundgestionevent"> -->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="Gérer les événements" />

    <Button
        android:id="@+id/activity_gestion_event_proximite"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:text="Events à proximité"
        android:textSize="15sp"/>


    <Button
        android:id="@+id/activity_gestion_event_spotify"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/event_color_03"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text="Un event sur ton Spotify ?" />

    <Button
        android:id="@+id/activity_gestion_event_creer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/create_color"
        android:text="Créer un event"
        android:textSize="20sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/activity_gestion_event_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/activity_gestion_event_log_out"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="10sp"
        android:layout_marginTop="100dp"
        android:text="Se déconnecter" />

